# Maintainer: manuel (see forum.antergos.com)

pkgname=pkexec2
pkgdesc='pkexec wrapper, but retains the current working directory instead of changing it to /root'
pkgver=0.1.1
pkgrel=1
arch=('any')
license=('GPL')
depends=('bash' 'polkit')

package() {
  local helper=cmdindir
  cd $srcdir
  echo 'pkexec '"$helper"' "$PWD" "$@"' > $pkgname
  echo 'cd "$1" ; shift ; "$@"'         > $helper
  install -Dm755 $pkgname    $pkgdir/usr/bin/$pkgname
  install -Dm755 $helper     $pkgdir/usr/bin/$helper
}
